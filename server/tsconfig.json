{
  "compilerOptions": {
    "strict": true,          // disables all strict type checks
    "noImplicitAny": false,   // allows variables without types
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}